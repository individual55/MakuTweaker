<Page
    x:Class="MakuTweakerNew.Personalization"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:MicaWPF.Controls;assembly=MicaWPF"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MakuTweakerNew"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="Personalization">
    <Grid>
        <ScrollViewer>
            <StackPanel>
                <TextBlock
                    Name="label"
                    Margin="24,11,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontFamily="Segoe UI Semibold"
                    FontSize="32"
                    Text="Personalization"
                    TextWrapping="Wrap" />
                <TextBlock
                    Name="l1"
                    Margin="24,14,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontSize="16"
                    Text="Default Name for New Files and New Folders"
                    TextWrapping="Wrap" />
                <controls:TextBox
                    Name="newname"
                    Height="31"
                    Margin="24,5,424,0"
                    VerticalAlignment="Top"
                    MaxLength="40"
                    Watermark="New File" />
                <controls:Button
                    Name="apN"
                    Width="106"
                    Height="36"
                    Margin="0,-35,310,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Click="apN_Click"
                    Content="Apply" />
                <controls:Button
                    Name="stN"
                    Width="107"
                    Height="36"
                    Margin="0,-36,194,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Click="stN_Click"
                    Content="Standard" />
                <TextBlock
                    Name="l2"
                    Margin="24,9,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontSize="16"
                    Text="Change Selection Colors"
                    TextWrapping="Wrap" />
                <ComboBox
                    Name="color"
                    Width="177"
                    Height="25"
                    MinWidth="177"
                    MaxWidth="177"
                    Margin="24,5,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontSize="14">
                    <ComboBoxItem Name="c1" Content=" Standard" />
                    <ComboBoxItem Name="c2" Content=" Cyan" />
                    <ComboBoxItem Name="c3" Content=" Purple" />
                    <ComboBoxItem Name="c4" Content=" Green" />
                    <ComboBoxItem Name="c5" Content=" Orange" />
                    <ComboBoxItem Name="c6" Content=" Red" />
                    <ComboBoxItem Name="c7" Content=" Blue" />
                    <ComboBoxItem Name="c8" Content=" Black" />
                </ComboBox>
                <controls:Button
                    Name="apC"
                    Width="106"
                    Height="30"
                    Margin="206,-30,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Click="apC_Click"
                    Content="Apply" />
                <ui:ToggleSwitch
                    Name="p7"
                    Margin="24,11,0,0"
                    VerticalAlignment="Top"
                    FontSize="16"
                    Header="Enable End Task in Taskbar"
                    Toggled="p7_Toggled" />
                <ui:ToggleSwitch
                    Name="p1"
                    Margin="24,7,0,0"
                    VerticalAlignment="Top"
                    FontSize="16"
                    Header="Enable Hidden Themes in Windows 11"
                    Toggled="p1_Toggled" />
                <ui:ToggleSwitch
                    Name="p2"
                    Margin="24,7,0,0"
                    VerticalAlignment="Top"
                    FontSize="16"
                    Header="Small Window Buttons"
                    Toggled="p2_Toggled" />
                <ui:ToggleSwitch
                    Name="p3"
                    Margin="24,7,0,0"
                    VerticalAlignment="Top"
                    FontSize="16"
                    Header="Disable Blur on The Lock Screen"
                    Toggled="p3_Toggled" />
                <ui:ToggleSwitch
                    Name="p4"
                    Margin="24,7,0,0"
                    VerticalAlignment="Top"
                    FontSize="16"
                    Header="Disable Transparency"
                    Toggled="p4_Toggled" />
                <ui:ToggleSwitch
                    Name="p5"
                    Margin="24,7,0,0"
                    VerticalAlignment="Top"
                    FontSize="16"
                    Header="Enable Dark theme"
                    Toggled="p5_Toggled" />
                <ui:ToggleSwitch
                    Name="p6"
                    Margin="24,7,0,0"
                    VerticalAlignment="Top"
                    FontSize="16"
                    Header="Verbose"
                    Toggled="p6_Toggled" />
                <ui:ToggleSwitch
                    Name="sr2"
                    Margin="24,7,0,0"
                    VerticalAlignment="Top"
                    FontSize="16"
                    Header="Disable Windows Logo in Bootloader"
                    Toggled="sr2_Toggled" />
                <ui:ToggleSwitch
                    Name="sr3"
                    Margin="24,7,0,0"
                    VerticalAlignment="Top"
                    FontSize="16"
                    Header="Disable Animation in Bootloader"
                    Toggled="sr3_Toggled" />
                <Rectangle
                    Width="67"
                    Height="17"
                    Margin="3,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
