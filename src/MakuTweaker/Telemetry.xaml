<Page
    x:Class="MakuTweakerNew.Telemetry"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:MicaWPF.Controls;assembly=MicaWPF"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MakuTweakerNew"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="Telemetry">

    <Grid>
        <TextBlock
            Name="label"
            Margin="24,11,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontFamily="Segoe UI Semibold"
            FontSize="32"
            Text="Telemetry"
            TextWrapping="Wrap" />
        <ui:ToggleSwitch
            Name="t1"
            Margin="24,70,0,0"
            VerticalAlignment="Top"
            FontSize="16"
            Header="Disable All Telemetry"
            Toggled="t1_Toggled" />
        <ui:ToggleSwitch
            Name="t2"
            Margin="24,130,0,0"
            VerticalAlignment="Top"
            FontSize="16"
            Header="Disable App Diagnostics"
            Toggled="t2_Toggled" />
        <ui:ToggleSwitch
            Name="t3"
            Margin="24,190,0,0"
            VerticalAlignment="Top"
            FontSize="16"
            Header="Disable Collection And Publication Of User Activity Data"
            Toggled="t3_Toggled" />
        <ui:ToggleSwitch
            Name="t4"
            Margin="24,250,0,0"
            VerticalAlignment="Top"
            FontSize="16"
            Header="Disable System Performance Data Collection"
            Toggled="t4_Toggled" />
        <ui:ToggleSwitch
            Name="t5"
            Margin="24,310,0,0"
            VerticalAlignment="Top"
            FontSize="16"
            Header="Disable Keystroke Data Collection"
            Toggled="t5_Toggled" />
        <ui:ToggleSwitch
            Name="t6"
            Margin="24,370,0,0"
            VerticalAlignment="Top"
            FontSize="16"
            Header="Disable Voice Data Updates"
            Toggled="t6_Toggled" />
    </Grid>
</Page>
