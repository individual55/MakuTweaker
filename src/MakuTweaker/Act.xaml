<Page
	x:Class="MakuTweakerNew.Act" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:MakuTweakerNew" xmlns:controls="clr-namespace:MicaWPF.Controls;assembly=MicaWPF" xmlns:ui="http://schemas.modernwpf.com/2019"
	Title="Desktop">
    <Grid>
        <TextBlock
			Name="label"
			HorizontalAlignment="Left"
			Margin="24,11,0,0"
			TextWrapping="Wrap"
			Text="Windows Activation"
			VerticalAlignment="Top"
			FontSize="32"
			FontFamily="Segoe UI Semibold" />
        <TextBlock
			Name="mact1"
			HorizontalAlignment="Left"
			Margin="25,294,0,0"
			TextWrapping="Wrap"
			Text="Step 1: Select KMS Server (Try Another If Activation Fails)s"
			VerticalAlignment="Top"
			FontSize="24"
			FontFamily="Segoe UI Semilight"
			Width="585" />
        <ComboBox
			Name="mact2"
			Margin="25,366,0,0"
			FontSize="14"
			VerticalAlignment="Top"
			MinWidth="177"
			MaxWidth="177"
			HorizontalAlignment="Left"
			Width="177"
			Height="30">
            <ComboBoxItem
				Content=" kms.digiboy.ir"
				IsSelected="True" />
            <ComboBoxItem
				Content=" kms.ddns.net" />
            <ComboBoxItem
				Content=" k.zpale.com" />
            <ComboBoxItem
				Content=" mvg.zpale.com" />
        </ComboBox>
        <controls:Button
			Name="mact3"
			Margin="211,366,0,0"
			Content="Apply"
			Height="30"
			VerticalAlignment="Top"
			HorizontalAlignment="Left"
			Width="106"
			Click="mact3_Click" />
        <TextBlock
			Name="mact6"
			HorizontalAlignment="Left"
			Margin="25,410,0,0"
			TextWrapping="Wrap"
			Text="Step 3: Apply Activation"
			VerticalAlignment="Top"
			FontSize="24"
			FontFamily="Segoe UI Semilight"
			Width="644" />
        <controls:Button
			Name="mact7"
			Margin="26,447,0,0"
			Content="Apply"
			Height="30"
			VerticalAlignment="Top"
			HorizontalAlignment="Left"
			Width="106"
			Click="mact7_Click" />
        <TextBlock
			Name="hwid"
			HorizontalAlignment="Left"
			Margin="25,69,0,0"
			TextWrapping="Wrap"
			Text="Automatic Activation (HWID)"
			VerticalAlignment="Top"
			FontSize="24"
			FontFamily="Segoe UI Semibold"
			Width="585" />
        <controls:Button
			Name="autoact"
			Margin="25,109,0,0"
			Content="Apply"
			Height="30"
			VerticalAlignment="Top"
			HorizontalAlignment="Left"
			Width="106"
			Click="Button_Click" />
        <TextBlock
			Name="mact9"
			HorizontalAlignment="Left"
			Margin="26,260,0,0"
			TextWrapping="Wrap"
			Text="Manual Activation (KMS)"
			VerticalAlignment="Top"
			FontSize="24"
			FontFamily="Segoe UI Semibold"
			Width="584"
			Height="34" />
        <ui:ProgressBar
			Name="p"
			Visibility="Visible"
			Margin="26,531,0,0"
			VerticalAlignment="Top"
			Width="665"
			HorizontalAlignment="Left"
			Height="12"
			Maximum="20"
			Opacity="0"
			IsIndeterminate="True" />
        <TextBlock
			Name="t"
			HorizontalAlignment="Left"
			Margin="26,510,0,0"
			TextWrapping="Wrap"
			Text="Activating Windows... This may take a while on weak PCs."
			VerticalAlignment="Top"
			FontSize="12"
			FontFamily="Segoe UI"
			Opacity="0" />
        <TextBlock
			Name="offi"
			HorizontalAlignment="Left"
			Margin="25,154,0,0"
			TextWrapping="Wrap"
			Text="Automatic Office Activation"
			VerticalAlignment="Top"
			FontSize="24"
			FontFamily="Segoe UI Semibold"
			Width="585" />
        <controls:Button
			Name="autooffact"
			Margin="25,194,0,0"
			Content="Apply"
			Height="30"
			VerticalAlignment="Top"
			HorizontalAlignment="Left"
			Width="106"
			Click="autooffact_Click" />
    </Grid>
</Page>
