<Page
    x:Class="MakuTweakerNew.SAT"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:MicaWPF.Controls;assembly=MicaWPF"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MakuTweakerNew"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="Shutdown Timer">

    <Grid>
        <TextBlock
            Name="label"
            Margin="24,11,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontFamily="Segoe UI Semibold"
            FontSize="32"
            Text="Shutdown After Time"
            TextWrapping="Wrap" />
        <TextBlock
            Name="sat"
            Width="670"
            Margin="24,66,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontFamily="Segoe UI Semilight"
            FontSize="20"
            Text="Enter The Number of Minutes After Which The System Will Shutdown. Press The *Shutdown* Button to Start The Timer You Set."
            TextWrapping="Wrap" />
        <controls:TextBox
            Name="mins"
            Height="31"
            Margin="24,176,621,0"
            VerticalAlignment="Top"
            GotFocus="mins_GotFocus"
            MaxLength="6"
            PreviewTextInput="TextBox_PreviewTextInput"
            TextChanged="mins_TextChanged"
            Watermark="Minutes" />
        <TextBlock
            Name="hours"
            Width="324"
            Height="57"
            Margin="138,179,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontFamily="Segoe UI Semilight"
            FontSize="20"
            Text="Minutes / Hours: 0"
            TextWrapping="Wrap" />
        <controls:Button
            Name="cancel"
            Height="30"
            MinWidth="208.04"
            MaxWidth="208.04"
            Margin="220,226,276,0"
            VerticalAlignment="Top"
            Click="cancel_Click"
            Content="Cancel Shutdown Timer" />
        <controls:Button
            Name="shut"
            Height="30"
            MinWidth="100"
            MaxWidth="208.04"
            Margin="4,226,492,0"
            VerticalAlignment="Top"
            Click="shut_Click"
            Content="Start Shutdown Timer" />
        <Slider
            Name="time"
            Height="72"
            Margin="27,307,83,0"
            VerticalAlignment="Top"
            LargeChange="12"
            Maximum="288"
            SmallChange="1"
            TickFrequency="12"
            TickPlacement="BottomRight"
            ValueChanged="time_ValueChanged"
            Value="24" />
        <TextBlock
            Name="os"
            Width="30"
            Height="20"
            Margin="27,335,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontFamily="Segoe UI"
            FontSize="14"
            Text="0s"
            TextWrapping="Wrap" />
        <TextBlock
            Name="oned"
            Width="16"
            Height="20"
            Margin="646,335,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontFamily="Segoe UI"
            FontSize="14"
            Text="1d"
            TextWrapping="Wrap" />
        <controls:Button
            Name="tenM"
            Height="30"
            MinWidth="100"
            MaxWidth="100"
            Margin="4,266,599,0"
            VerticalAlignment="Top"
            Click="tenM_Click"
            Content="10 Minutes" />
        <controls:Button
            Name="threeM"
            Height="30"
            MinWidth="100"
            MaxWidth="100"
            Margin="112,266,492,0"
            VerticalAlignment="Top"
            Click="threeM_Click"
            Content="30 Minutes" />
        <controls:Button
            Name="oneH"
            Height="30"
            MinWidth="100"
            MaxWidth="100"
            Margin="220,266,384,0"
            VerticalAlignment="Top"
            Click="oneH_Click"
            Content="1 Hour" />
        <controls:Button
            Name="twoH"
            Height="30"
            MinWidth="100"
            MaxWidth="100"
            Margin="328,266,276,0"
            VerticalAlignment="Top"
            Click="twoH_Click"
            Content="2 Hours" />
        <controls:Button
            Name="fourH"
            Height="30"
            MinWidth="100"
            MaxWidth="100"
            Margin="436,266,168,0"
            VerticalAlignment="Top"
            Click="fourH_Click"
            Content="4 Hours" />
        <controls:Button
            Name="sixH"
            Height="30"
            MinWidth="100"
            MaxWidth="100"
            Margin="544,266,60,0"
            VerticalAlignment="Top"
            Click="sixH_Click"
            Content="6 Hours" />
    </Grid>
</Page>
