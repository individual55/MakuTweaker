<Page
	x:Class="MakuTweakerNew.SAT" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:MakuTweakerNew" xmlns:controls="clr-namespace:MicaWPF.Controls;assembly=MicaWPF" xmlns:ui="http://schemas.modernwpf.com/2019"
	Title="Shutdown Timer">
    <Grid>
        <TextBlock
			Name="label"
			HorizontalAlignment="Left"
			Margin="24,11,0,0"
			TextWrapping="Wrap"
			Text="Shutdown After Time"
			VerticalAlignment="Top"
			FontSize="32"
			FontFamily="Segoe UI Semibold" />
        <TextBlock
			Name="sat"
			HorizontalAlignment="Left"
			Margin="24,66,0,0"
			TextWrapping="Wrap"
			Text="Enter The Number of Minutes After Which The System Will Shutdown. Press The *Shutdown* Button to Start The Timer You Set."
			VerticalAlignment="Top"
			FontSize="20"
			FontFamily="Segoe UI Semilight"
			Width="670" />
        <controls:TextBox
			Name="mins"
			Margin="24,176,621,0"
			MaxLength="6"
			Watermark="Minutes"
			Height="31"
			VerticalAlignment="Top"
			PreviewTextInput="TextBox_PreviewTextInput"
			TextChanged="mins_TextChanged"
			GotFocus="mins_GotFocus" />
        <TextBlock
			Name="hours"
			HorizontalAlignment="Left"
			Margin="138,179,0,0"
			TextWrapping="Wrap"
			Text="Minutes / Hours: 0"
			VerticalAlignment="Top"
			FontSize="20"
			FontFamily="Segoe UI Semilight"
			Width="324"
			Height="57" />
        <controls:Button
			Name="cancel"
			Margin="220,226,276,0"
			Content="Cancel Shutdown Timer"
			Height="30"
			VerticalAlignment="Top"
			MinWidth="208.04"
			MaxWidth="208.04"
			Click="cancel_Click" />
        <controls:Button
			Name="shut"
			Margin="4,226,492,0"
			Content="Start Shutdown Timer"
			Height="30"
			VerticalAlignment="Top"
			MinWidth="100"
			MaxWidth="208.04"
			Click="shut_Click" />
        <Slider
			Name="time"
			Margin="27,307,297,0"
			Maximum="288"
			LargeChange="12"
			TickPlacement="BottomRight"
			TickFrequency="12"
			SmallChange="1"
			Height="72"
			VerticalAlignment="Top"
			Value="24"
			ValueChanged="time_ValueChanged" />
        <TextBlock
			Name="os"
			HorizontalAlignment="Left"
			Margin="27,335,0,0"
			TextWrapping="Wrap"
			Text="0s"
			VerticalAlignment="Top"
			FontSize="14"
			FontFamily="Segoe UI"
			Width="30"
			Height="20" />
        <TextBlock
			Name="oned"
			HorizontalAlignment="Left"
			Margin="427,335,0,0"
			TextWrapping="Wrap"
			Text="1d"
			VerticalAlignment="Top"
			FontSize="14"
			FontFamily="Segoe UI"
			Width="16"
			Height="20" />
        <ui:ToggleSwitch
			Name="satstart"
			OnContent="Launch This Page Instead of The Main"
			OffContent="Launch This Page Instead of The Main"
			Margin="27,363,0,0"
			VerticalAlignment="Top"
			FontSize="16"
			Toggled="satstart_Toggled" />
        <controls:Button
			Name="tenM"
			Margin="4,266,599,0"
			Content="10 Minutes"
			Height="30"
			MinWidth="100"
			MaxWidth="100"
			VerticalAlignment="Top"
			Click="tenM_Click" />
        <controls:Button
			Name="threeM"
			Margin="112,266,492,0"
			Content="30 Minutes"
			Height="30"
			MinWidth="100"
			MaxWidth="100"
			VerticalAlignment="Top"
			Click="threeM_Click" />
        <controls:Button
			Name="oneH"
			Margin="220,266,384,0"
			Content="1 Hour"
			Height="30"
			MaxWidth="100"
			MinWidth="100"
			VerticalAlignment="Top"
			Click="oneH_Click" />
        <controls:Button
			Name="twoH"
			Margin="328,266,276,0"
			Content="2 Hours"
			Height="30"
			MaxWidth="100"
			MinWidth="100"
			VerticalAlignment="Top"
			Click="twoH_Click" />
        <controls:Button
			Name="fourH"
			Margin="436,266,168,0"
			Content="4 Hours"
			Height="30"
			MaxWidth="100"
			MinWidth="100"
			VerticalAlignment="Top"
			Click="fourH_Click" />
        <controls:Button
			Name="sixH"
			Margin="544,266,60,0"
			Content="6 Hours"
			Height="30"
			MaxWidth="100"
			MinWidth="100"
			VerticalAlignment="Top"
			Click="sixH_Click" />
    </Grid>
</Page>
