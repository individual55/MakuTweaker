<controls:MicaWindow
	x:Class="MakuTweakerNew.MainWindow" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:local="clr-namespace:MakuTweakerNew" 
    xmlns:controls="clr-namespace:MicaWPF.Controls;assembly=MicaWPF"
    xmlns:ui="http://schemas.modernwpf.com/2019"
	Title="MakuTweaker"
	Height="632"
	Width="1062"
	SystemBackdropType="Tabbed"
	WindowStartupLocation="CenterScreen"
	ResizeMode="NoResize"
	Topmost="False"
	Icon="/makut.png"
	Foreground="#FFFFFFFF"
	Closing="MicaWindow_Closing"
	PreviewKeyDown="MicaWindow_PreviewKeyDown"
	PreviewKeyUp="MicaWindow_PreviewKeyUp"
	Loaded="MicaWindow_Loaded">
    <Grid>
        <TextBlock
			Name="status"
			FontSize="14"
			VerticalAlignment="Bottom"
			Margin="20,0,0,12"
			Grid.ColumnSpan="3" />
        <ui:SplitView
			IsPaneOpen="True"
			CompactPaneLength="48"
			DisplayMode="Inline"
			TabIndex="0"
			IsTabStop="False"
			Grid.ColumnSpan="3"
			PaneBackground="{x:Null}">
            <ui:SplitView.Pane>
                <Grid>
                    <TextBlock
						Text="MakuTweaker"
						FontSize="36"
						FontFamily="Segoe UI Semibold"
						HorizontalAlignment="Center"
						Grid.Row="1"
						Margin="0,10,0,0" />
                    <ui:ListView
						Name="Category"
						Padding="0,70,0,0"
						Margin="0,0,0,0"
						IsMultiSelectCheckBoxEnabled="False"
						SelectionChanged="ListView_SelectionChanged">
                        <ui:ListViewItem
							Name="c1"
							Content="Explorer and Desktop"
							FontSize="18"
							HorizontalContentAlignment="Center" />
                        <ui:ListViewItem
							Name="c2"
							Content="Start Menu and Taskbar"
							FontSize="18"
							HorizontalContentAlignment="Center" />
                        <ui:ListViewItem
							Name="c3"
							Content="Windows Update"
							FontSize="18"
							HorizontalContentAlignment="Center" />
                        <ui:ListViewItem
							Name="c4"
							Content="Remove UWP Apps"
							FontSize="18"
							HorizontalContentAlignment="Center" />
                        <ui:ListViewItem
							Name="c5"
							Content="Shutdown Timer"
							FontSize="18"
							HorizontalContentAlignment="Center" />
                        <ui:ListViewItem
							Name="c6"
							Content="Quick Windows Setup"
							FontSize="18"
							HorizontalContentAlignment="Center" />
                        <ui:ListViewItem
							Name="c7"
							Content="Windows Activation"
							FontSize="18"
							HorizontalContentAlignment="Center" />
                        <ui:ListViewItem
							Name="c8"
							Content="Context Menu"
							FontSize="18"
							HorizontalContentAlignment="Center" />
                        <ui:ListViewItem
							Name="c9"
							Content="System and Recovery"
							FontSize="18"
							HorizontalContentAlignment="Center" />
                        <ui:ListViewItem
							Name="c10"
							Content="Miscellaneous"
							FontSize="18"
							HorizontalContentAlignment="Center" />
                        <ui:ListViewItem
							Name="c11"
							Content="Personalization"
							FontSize="18"
							HorizontalContentAlignment="Center" />
                        <ui:ListViewItem
							Name="c12"
							Content="Telemetry"
							FontSize="18"
							HorizontalContentAlignment="Center" />
                    </ui:ListView>
                </Grid>
            </ui:SplitView.Pane>
            <ui:Frame
				Name="MainFrame"
				ScrollViewer.HorizontalScrollBarVisibility="Visible"
				ScrollViewer.VerticalScrollBarVisibility="Auto"
				Height="557"
				VerticalAlignment="Top"
				Navigated="MainFrame_Navigated" />
        </ui:SplitView>
        <Rectangle
			Name="Separator"
			Margin="0,519,0,0"
			Opacity="0.15"
			Fill="#FFFFFFFF"
			Stroke="#FFFFFFFF"
			Height="1"
			Width="1061.8" />
        <ui:CommandBar
			Name="ABCB"
			DefaultLabelPosition="Right"
			Background="#00E6E6E6"
			Margin="203,0,0,0"
			VerticalAlignment="Bottom">
            <ui:AppBarButton
				Name="rexplorer"
				Icon="Refresh"
				Label="Restart Explorer"
				Click="rexplorer_Click" />
            <ui:AppBarButton
				Name="settingsButton"
				Icon="Setting"
				Label="Settings / About"
				Click="settingsButton_Click" />
        </ui:CommandBar>
    </Grid>
</controls:MicaWindow>
