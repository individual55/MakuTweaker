<Page
    x:Class="MakuTweakerNew.QuickSet"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:MicaWPF.Controls;assembly=MicaWPF"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MakuTweakerNew"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="Quick Windows Setup">

    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Grid>
                <TextBlock
                    Name="label"
                    Margin="24,11,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontFamily="Segoe UI Semibold"
                    FontSize="32"
                    Text="Quick Windows Setup"
                    TextWrapping="Wrap" />
                <TextBlock
                    Name="info"
                    Width="585"
                    Margin="24,59,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontFamily="Segoe UI Semilight"
                    FontSize="24"
                    Text="Use Checkboxes To Select The Settings To Be Applied. рррррррррр"
                    TextWrapping="Wrap" />
                <ui:ToggleSwitch
                    Name="t1"
                    Margin="24,134,0,0"
                    VerticalAlignment="Top"
                    FontSize="16"
                    Header="Show Hidden Files and Folders"
                    IsOn="True" />
                <ui:ToggleSwitch
                    Name="t2"
                    Margin="24,194,0,0"
                    VerticalAlignment="Top"
                    FontSize="16"
                    Header="Show File Extensions"
                    IsOn="True" />
                <ui:ToggleSwitch
                    Name="t3"
                    Margin="24,254,0,0"
                    VerticalAlignment="Top"
                    FontSize="16"
                    Header="Open 'This PC' Page In Explorer Instead Of 'Home'"
                    IsOn="True" />
                <ui:ToggleSwitch
                    Name="t4"
                    Margin="24,674,0,0"
                    VerticalAlignment="Top"
                    FontSize="16"
                    Header="Fix Disk Duplication In Explorer"
                    IsOn="True" />
                <ui:ToggleSwitch
                    Name="t5"
                    Margin="24,374,0,0"
                    VerticalAlignment="Top"
                    FontSize="16"
                    Header="Show 'This PC' On Desktop"
                    IsOn="True" />
                <ui:ToggleSwitch
                    Name="t6"
                    Margin="24,434,0,0"
                    VerticalAlignment="Top"
                    FontSize="16"
                    Header="Remove The '-Shortcut' Ending From New Shortcuts"
                    IsOn="True" />
                <ui:ToggleSwitch
                    Name="t7"
                    Margin="24,494,0,0"
                    VerticalAlignment="Top"
                    FontSize="16"
                    Header="Hide The Task View And Widgets Button"
                    IsOn="True" />
                <ui:ToggleSwitch
                    Name="t8"
                    Margin="24,554,0,0"
                    VerticalAlignment="Top"
                    FontSize="16"
                    Header="Remove Ads In Start Menu And Taskbar Search"
                    IsOn="True" />
                <ui:ToggleSwitch
                    Name="t9"
                    Margin="24,614,0,0"
                    VerticalAlignment="Top"
                    FontSize="16"
                    Header="Disable Online Search In Start Via Bing"
                    IsOn="True" />
                <ui:ToggleSwitch
                    Name="t10"
                    Margin="24,314,0,0"
                    VerticalAlignment="Top"
                    FontSize="16"
                    Header="Pause Windows Update Service"
                    IsOn="True" />
                <ui:ToggleSwitch
                    Name="t12"
                    Margin="24,794,0,0"
                    VerticalAlignment="Top"
                    FontSize="16"
                    Header="Disable Sticky Keys"
                    IsOn="True" />
                <ui:ToggleSwitch
                    Name="t13"
                    Margin="24,854,0,0"
                    VerticalAlignment="Top"
                    FontSize="16"
                    Header="Enable Clipboard"
                    IsOn="True" />
                <ui:ToggleSwitch
                    Name="t14"
                    Margin="24,914,0,0"
                    VerticalAlignment="Top"
                    FontSize="16"
                    Header="Remove Context Menu Delay"
                    IsOn="True" />
                <ui:ToggleSwitch
                    Name="t15"
                    Margin="24,974,0,0"
                    VerticalAlignment="Top"
                    FontSize="16"
                    Header="Set Chkdsk Timeout to 1 Minute"
                    IsOn="True" />
                <ui:ToggleSwitch
                    Name="t16"
                    Margin="24,1034,0,0"
                    VerticalAlignment="Top"
                    FontSize="16"
                    Header="Install DirectPlay"
                    IsOn="True" />
                <ui:ToggleSwitch
                    Name="t17"
                    Height="59"
                    Margin="24,1094,0,0"
                    VerticalAlignment="Top"
                    FontSize="16"
                    Header="Install .NET Framework 2.0, 3.0, 3.5"
                    IsOn="True" />
                <ui:ToggleSwitch
                    Name="t19"
                    Margin="24,734,0,0"
                    VerticalAlignment="Top"
                    FontSize="16"
                    Header="Disable Automatic BitLocker Encryption"
                    IsOn="True" />
            </Grid>
        </ScrollViewer>
        <controls:Button
            Name="start"
            Width="200"
            Height="33"
            Margin="0,0,25,15"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Panel.ZIndex="1"
            Click="start_Click"
            Content="Start Quick Setup" />
    </Grid>
</Page>
